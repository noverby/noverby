{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"**/*.css",
			".direnv",
			".devenv",
			".pre-commit-config.yaml",
			"!**/out",
			"!**/node_modules",
			"!**/dist",
			"!**/result",
			"!**/.next",
			"!**/schema.generated.ts"
		]
	},
	"linter": {
		"rules": {
			"a11y": {
				"useAnchorContent": "off",
				"useMediaCaption": "off"
			},
			"suspicious": {
				"noDuplicateFontNames": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"nursery": {
				"useUniqueElementIds": "off"
			}
		}
	}
}
