#!/usr/bin/env bash

# Git wrapper that refuses to run git and suggests using jj instead

echo "‚ùå Git is disabled in this environment."
echo "üí° Please use 'jj' (Jujutsu) instead for version control operations."
echo ""
echo "Common jj commands:"
echo "  jj status       - Show working copy status"
echo "  jj log          - Show commit history"
echo "  jj diff         - Show changes"
echo "  jj new          - Create a new, empty change"
echo "  jj commit       - Update description and create new change on top"
echo "  jj describe     - Update the change description"
echo "  jj bookmark     - List and manage bookmarks (branches)"
echo "  jj git push     - Push changes to remote"
echo "  jj git fetch    - Fetch changes from remote"
echo ""
echo "For more information, run: jj help"
echo ""
echo "If you really need to use git, you can use the full path:"
echo "  $(which git) "$@

exit 1
